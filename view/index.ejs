<%- include('parts/header', { bootScript: "initializeMapView()" }) %>
<nav id="menu">
    <div class="menu-section left">
        <a href="/sensors">
            <i class="fa fa-bars mr-1"></i>
            Liste der Sensoren
        </a>
    </div>
    <div class="menu-section right">
        <select id="map-style" class="form-control">
            <option value="" selected>OSM Standard</option>
            <option value="osm-bright">OSM Bright</option>
            <option value="map-tiler-basic">Map Tiler</option>
            <option value="positron">Positron</option>
            <option value="dark-matter">Dark Matter</option>
        </select>
    </div>
</nav>
<section id="page">
    <div id="sidebar">
        <div class="mb-3">
            <select id="sensor-selection" class="form-control" onchange="onSensorSelectionChanged(this)">
                <option value="" selected>kein Sensor ausgewählt</option>
            </select>
        </div>
        <div id="intro-info" class="side-block">
            <h3>Quick-Start</h3>
            <p class="quick-start">
                Klicke auf einen Sensor auf der Karte oder wähle im Auswahlfeld oben einen aus, um eine kurze Beschreibung und den Verlauf der gemessenen Werte einzublenden.
            </p>
        </div>
        <div id="sensor-details" style="display: none">
            <div class="side-block">
                <h3>Sensor</h3>
                <h4 class="sensor-name"></h4>
                <p class="sensor-description"></p>
                <button id="goto-details-button" class="btn btn-primary"
                    onclick="gotoDetailView()">
                    <i class="fa fa-search mr-sm-1"></i>
                    Details
                </button>
                <h5><i class="fa fa-map-marker-alt"></i>Position</h5>
                <div class="sensor-location"></div>
                <h5><i class="fa fa-broadcast-tower"></i>Letzte Aktivität</h5>
                <div class="sensor-last-activity"></div>
                <h5><i class="fa fa-chart-bar"></i>Aktuelle Werte</h5>
                <div class="sensor-series"></div>
                <h5><i class="fa fa-chart-line"></i>Wochenverlauf</h5>
                <div class="sensor-plot"></div>
            </div>
            <div id="show-all-sensors-block">
                <button class="btn btn-primary" style="width:100%;"
                    onclick="selectSeries(null)">
                    <i class="far fa-map mr-sm-1"></i>
                    Alle Sensoren anzeigen
                </button>
            </div>
        </div>
    </div>
    <div id="map" class="main-area"></div>
</section>
<%- include('parts/footer') %>
